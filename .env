# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

COMPANY_DOMAIN="mycompany.com"
TZ="Europe/Paris"

# NEXTAUTH
NEXTAUTH_SECRET="uneclesecrete"
NEXTAUTH_URL="http://localhost:3000/api/auth"

# NEXTAUTH PROVIDER EMAIL
NEXTAUTH_PROVIDER_EMAIL_SERVER_USER=username
NEXTAUTH_PROVIDER_EMAIL_SERVER_PASSWORD=password
NEXTAUTH_PROVIDER_EMAIL_SERVER_HOST=smtp.example.com
NEXTAUTH_PROVIDER_EMAIL_SERVER_PORT=587
NEXTAUTH_PROVIDER_EMAIL_FROM=noreply@example.com

# NEXTAUTH PROVIDER GITHUB
# https://github.com/settings/developers
NEXTAUTH_PROVIDER_GITHUB_CLIENT_ID=my_github_client_id
NEXTAUTH_PROVIDER_GITHUB_CLIENT_SECRET=my_github_client_secret

# NEXTAUTH PROVIDER GOOGLE
# https://console.cloud.google.com/apis/credentials
NEXTAUTH_PROVIDER_GOOGLE_CLIENT_ID=my_google_client_id
NEXTAUTH_PROVIDER_GOOGLE_CLIENT_SECRET=my_google_client_secret

# DATA PATH FOR FILE SHARING
DATA_PATH="/data"